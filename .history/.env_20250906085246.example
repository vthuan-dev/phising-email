# .env.example
# Email Processing Mode
MODE=classic  # classic|llm|hybrid

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # gpt-4o-mini|gpt-4o

# IMAP Configuration (for email fetching)
IMAP_HOST=imap.gmail.com
IMAP_USER=your_email@gmail.com
IMAP_PASS=your_app_password

# Machine Learning
DATA_PATH=/app/data/synthetic_emails.csv

# Logging
LOG_LEVEL=INFO

# ElastAlert Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@yourcompany.com
SMTP_PASS=your_smtp_password
ALERT_EMAIL=security@yourcompany.com

# Slack Webhook (optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Elasticsearch (if auth enabled)
ES_USER=elastic
ES_PASS=your_es_password

# Rate Limiting
LLM_RATE_LIMIT=10  # requests per minute
LLM_CACHE_ENABLED=true

# Operational Settings
AGENT_POLL_INTERVAL=60  # seconds
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30
